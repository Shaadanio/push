# Сервер
PORT=3000
NODE_ENV=development
API_SECRET_KEY=your-super-secret-api-key-change-in-production

# JWT
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# VAPID ключи для Web Push (сгенерировать: npm run generate-vapid)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@yoursite.com

# Apple Push Notification Service (APNS)
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apple-team-id
APNS_BUNDLE_ID=com.yourcompany.yourapp
APNS_PRODUCTION=false
# Путь к .p8 файлу ключа APNS
APNS_KEY_PATH=./certs/apns-key.p8

# Android Push (собственный WebSocket сервер)
# Не требует внешних сервисов!
# Android устройства подключаются через WebSocket на /ws/android

# База данных
DATABASE_PATH=./data/notifications.db

# Лимиты
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Логирование
LOG_LEVEL=info
